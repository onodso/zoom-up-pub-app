# ========================================
# データベース（Lenovo Tiny）
# ========================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=zoom_admin
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=zoom_dx_db

# ========================================
# Redis
# ========================================
REDIS_URL=redis://localhost:6379/0

# ========================================
# JWT認証
# ========================================
JWT_SECRET_KEY=your_jwt_secret_key_here_min_32_chars
JWT_ALGORITHM=HS256
JWT_EXPIRE_HOURS=8

# ========================================
# Zoom Team Chat（後で設定）
# ========================================
ZOOM_CHAT_WEBHOOK_URL=

# ========================================
# Google Gemini API
# ========================================
GEMINI_API_KEY=your_gemini_api_key_here

# ========================================
# MCP サーバー（e-Stat）
# ========================================
ESTAT_APP_ID=your_estat_app_id_here

# ========================================
# 外部API
# ========================================
JLIS_API_KEY=your_jlis_api_key_here
GOOGLE_NEWS_API_KEY=your_google_news_api_key_here

# Google Custom Search API（ニュース収集用）
GOOGLE_SEARCH_API_KEY=your_google_custom_search_api_key_here
GOOGLE_SEARCH_ENGINE_ID=your_search_engine_id_here

# ========================================
# Ollama（AI分析用）
# ========================================
# ローカル実行時: http://localhost:11434
# Docker Compose実行時: http://ollama:11434
# Mac Docker Desktop: http://host.docker.internal:11434
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3

# ========================================
# AWS（本番環境用）
# ========================================
AWS_REGION=ap-northeast-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_POSTGRES_HOST=your-lightsail-instance.amazonaws.com
AWS_POSTGRES_PORT=5432

# ========================================
# Cloudflare Tunnel
# ========================================
CLOUDFLARE_TUNNEL_TOKEN=your_cloudflare_tunnel_token

# ========================================
# CORS設定
# ========================================
# カンマ区切りで複数のオリジンを指定可能
# 例: http://localhost:3000,https://dx.kikagaku-zoom.com
ALLOWED_ORIGINS=http://localhost:3000

# ========================================
# その他
# ========================================
NODE_ENV=development
LOG_LEVEL=INFO
